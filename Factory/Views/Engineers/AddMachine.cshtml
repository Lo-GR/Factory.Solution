@{
  Layout = "_Layout";
}

@model Factory.Models.Engineer

<h4>Machine Certification to @Html.DisplayFor(model => model.EngineerName)</h4>

@using (Html.BeginForm())
{
    @Html.HiddenFor(model => model.EngineerId)

    @Html.Label("Select engineer")
    @Html.DropDownList("MachineId")

    <button class="btn btn-success" type="submit">Add Machine Certification to Engineer</button>
}

<button class="btn btn-dark">@Html.ActionLink("Return to all engineers", "Index")</button>